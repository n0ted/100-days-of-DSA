#  pattern 6

def pypattern(n):
    num=1
    for i in range(0,n):
        num=1
        for j in range(i,n):
            print(num,end='')
            num=num+1
        print('')

n=5        
pypattern(n)

Output--

12345
1234
123
12
1


////////////////////////////////////////////////


#  pattern 7


def pypattern(n):
    #number of spaces
    s=n-1
    for i in range(0,n):
        #print space
        for j in range(0,s):
            print(" ",end='')
        #decrementing after every completion
        s=s-1
            
        for j in range(0,2*i+1):
            print('*',end='')
        print(" ")

        
n= int(input('No of rows:'))
pypattern(n)

Output-- 

No of rows: 5
    * 
   * * 
  * * * 
 * * * * 
* * * * * 



////////////////////////////////////////////////


#  pattern 8

def pypattern(n):
    #number of spaces
    s=2*n-1
    
    for i in range(0,n):
        #print space
        for j in range(0,s):
            print(" ",end='')
        #increasing after every completion
        s+=1
        
            
        for j in range(0,2*n - (2*i+1)):
            print('*',end='')
        print(" ")

        
n= int(input('No of rows:'))
pypattern(n)

Output--
No of rows:5
         ********* 
          ******* 
           ***** 
            *** 
             * 
      
////////////////////////////////////////////////


#  pattern 9
(IMP)
def pypattern(n):
    #for upper triangle 
    #space 
    s=n-1
    #outer loop for rows;
    for i in range(0,n):
        #printing space (inner loops for rows)
        for j in range(0,s):
            print(" ",end='')
        #decrementing space
        s-=1 
        #printng stars
        for j in range(0,2*i+1):
            print('*',end='')
        print('')
    #for second triangle (inverted)
    #space
    s=0
    #similarly
    for i in range(0,n):
        
        for j in range(0,s):
            print(" ",end='')
        #increamenting value
        s+=1 
        for j in range(0,2*n-(2*i+1)):
            print('*',end='')
        print(' ')
                
        
n=int(input( "ENTER NO OF ROWS:"))
pypattern(n)

Output--

ENTER NO OF ROWS:5
    *
   ***
  *****
 *******
*********
********* 
 ******* 
  ***** 
   *** 
    *
    
    
 
        
